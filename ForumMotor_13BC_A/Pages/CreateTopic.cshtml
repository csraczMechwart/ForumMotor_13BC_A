@page
@model ForumMotor_13BC_A.Pages.CreateTopicModel

@{
    ViewData["Title"] = "CreateTopic";
}

<h1>CreateTopic</h1>

<h4>Topic</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Topic.Name" class="control-label"></label>
                <input asp-for="Topic.Name" class="form-control" />
                <span asp-validation-for="Topic.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Topic.Description" class="control-label"></label>
                <input asp-for="Topic.Description" class="form-control" />
                <span asp-validation-for="Topic.Description" class="text-danger"></span>
            </div>
            <div class="form-group" style="display: none;">
                <label asp-for="Topic.CategoryId" class="control-label"></label>
                <select asp-for="Topic.CategoryId" class ="form-control" value="@Model.CategoryId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Topic.UserId" class="control-label"></label>
                <select asp-for="Topic.UserId" class ="form-control" asp-items="ViewBag.UserId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Topic.CreateDate" class="control-label"></label>
                <input asp-for="Topic.CreateDate" class="form-control" />
                <span asp-validation-for="Topic.CreateDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
